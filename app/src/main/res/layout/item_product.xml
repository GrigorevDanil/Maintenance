<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/border_item"
    android:layout_margin="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_margin="10dp">
        
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Циркулярная пила"
            android:fontFamily="@font/nautilus"
            android:textSize="24dp"
            android:textColor="@color/white"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Модель:"
                android:textSize="18dp"
                android:layout_marginRight="10dp"
                android:fontFamily="@font/nautilus"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/tvModel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="vmd3241fde"
                android:textSize="18dp"
                android:fontFamily="@font/nautilus"
                android:textColor="@color/white"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Количество:"
                android:textSize="18dp"
                android:layout_marginRight="10dp"
                android:fontFamily="@font/nautilus"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/tvCountProduct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="13"
                android:textSize="18dp"
                android:layout_marginRight="10dp"
                android:fontFamily="@font/nautilus"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/tvUnit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="шт"
                android:textSize="18dp"
                android:fontFamily="@font/nautilus"
                android:textColor="@color/white"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Цена:"
                android:textSize="18dp"
                android:layout_marginRight="10dp"
                android:fontFamily="@font/nautilus"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/tvPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10000"
                android:textSize="18dp"
                android:layout_marginRight="10dp"
                android:fontFamily="@font/nautilus"
                android:textColor="@color/white"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="руб"
                android:textSize="18dp"
                android:fontFamily="@font/nautilus"
                android:textColor="@color/white"/>

        </LinearLayout>
        
    </LinearLayout>   

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2">

        <ImageView
            android:id="@+id/butEdit"
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:src="@drawable/ic_edit"
            app:iconSize="20dp"
            android:background="@drawable/border_but_action"
            android:layout_margin="10dp"/>

        <ImageView
            android:id="@+id/butDelete"
            android:src="@drawable/ic_remove"
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            app:iconSize="20dp"
            app:iconGravity="textStart"
            android:background="@drawable/border_but_red"
            android:layout_margin="10dp"/>

    </LinearLayout>
    
</LinearLayout>